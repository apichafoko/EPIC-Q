# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Opción 1: PostgreSQL Local
# DATABASE_URL="postgresql://usuario:password@localhost:5432/nombre_db?schema=public"

# Opción 2: Neon (Recomendado para producción)
# DATABASE_URL="postgresql://usuario:password@host.neon.tech/db?sslmode=require"


# Configuración de base de datos
DB_PROVIDER=neon
# DB_PROVIDER=neon

# Variables individuales para PostgreSQL local (opcional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=epicq_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_aqui

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

NODE_ENV=production
NEXTAUTH_SECRET=genera-un-secret-aqui-usando-openssl-rand-hex-32
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================

# Configuración SMTP (Gmail - desarrollo y fallback en producción)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-de-gmail
EMAIL_FROM=EPIC-Q System <noreply@example.com>
EMAIL_FROM_NAME=EPIC-Q Management System
EMAIL_PROVIDER=gmail # Opciones: gmail, aws_ses (aws_ses solo en producción)

# Configuración AWS S3 (Solo para producción - opcional)
# Solo configurar si quieres usar AWS S3 para almacenar archivos
EPIC_AWS_REGION=us-east-1
EPIC_AWS_ACCESS_KEY_ID=tu-access-key-id
EPIC_AWS_SECRET_ACCESS_KEY=tu-secret-access-key
EPIC_AWS_S3_BUCKET_NAME=tu-bucket-name

# Configuración AWS SES (Solo para producción - opcional)
# Solo configurar si tienes dominio propio y quieres usar AWS SES
AWS_SES_SMTP_HOST=email-smtp.us-east-1.amazonaws.com
AWS_SES_SMTP_PORT=587
AWS_SES_SMTP_USER=tu-smtp-username
AWS_SES_SMTP_PASS=tu-smtp-password
AWS_SES_REGION=us-east-1


# Configuración de seguridad
EMAIL_SECURE=false
EMAIL_TLS=true

# Configuración de templates
EMAIL_TEMPLATES_ENABLED=true
DEFAULT_INVITATION_TEMPLATE=user_invitation
DEFAULT_PASSWORD_RESET_TEMPLATE=password_reset

# ===========================================
# CONFIGURACIÓN DE REDCAP (OPCIONAL)
# ===========================================

REDCAP_API_URL=https://tu-redcap-instance.com/api/
REDCAP_API_TOKEN=tu-redcap-token

# ===========================================
# CONFIGURACIÓN DE ALERTAS (OPCIONAL)
# ===========================================

# Configuración de alertas automáticas
ALERT_INACTIVITY_DAYS=30
ALERT_LOW_COMPLETION_THRESHOLD=70
ALERT_UPCOMING_PERIOD_DAYS=7

# Configuración de Cron Jobs (Vercel)
CRON_SECRET=genera-un-secret-aqui-usando-openssl-rand-hex-32

# ===========================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ===========================================

# Sentry - Monitoreo de errores y performance
SENTRY_DSN=https://tu-dsn-de-sentry@sentry.io/proyecto
NEXT_PUBLIC_SENTRY_DSN=https://tu-dsn-de-sentry@sentry.io/proyecto
SENTRY_ORG=tu-organizacion
SENTRY_PROJECT=epic-q-management
SENTRY_AUTH_TOKEN=tu-auth-token-de-sentry

# ===========================================
# CONFIGURACIÓN DE PUSH NOTIFICATIONS (OPCIONAL)
# ===========================================

# VAPID Keys para Push Notifications
# Genera tus propias keys usando: npm install -g web-push && web-push generate-vapid-keys
VAPID_PUBLIC_KEY=tu-vapid-public-key-aqui
VAPID_PRIVATE_KEY=tu-vapid-private-key-aqui
VAPID_SUBJECT=mailto:tu-email@example.com

# ===========================================
# CONFIGURACIÓN DE BACKUP (OPCIONAL)
# ===========================================

# Configuración para backups automáticos
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *" # Diario a las 2 AM
BACKUP_RETENTION_DAYS=30
